DECLARE
	CURSOR C1(VNO NUMBER) IS 
		SELECT EMPNO,ENAME , DEPTNO
		FROM EMP
		WHERE DEPTNO = VNO;
		
	--C2 C1%ROWTYPE; FOR문 안에 변수는 선언하지 않고 사용가능

BEGIN
--반복문 + CURSOR 결합 
-- FOR 변수명 IN 하한값..상한값 LOOP
-- FOR 변수명 IN CURSOR명 LOOP : CURSOR FOR LOOP문 
	FOR I IN 1..3 LOOP	
		FOR C2 IN C1(30) LOOP
		--OPEN C1; FETCH C1 INTO C2; 

		DBMS_OUTPUT.PUT_LINE(C2.EMPNO || ' ' || C2.ENAME || ' ' || C2.DEPTNO);
		END LOOP;	
		--CLOSE C1;
	END LOOP; 
END;
/


